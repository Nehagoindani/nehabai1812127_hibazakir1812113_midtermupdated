<form action='../<%=product._id %>/update' method='POST'>
    <input type="text" name='_id' placeholder='_id' readonly value='<%=product._id %>'><br>
    <input type="text" name='name' placeholder='name' required value='<%=product.name %>'><br>
    <input type="number" name='price' placeholder='price' required value='<%=product.price %>'><br>
    <input type="submit" value="update product">
  </form>